@model StockManagementMvcWebApp.Models.Category

@{
    ViewBag.Title = "CategorySave";
    string message = ViewBag.Message;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 style="margin-left: 40%">Category Setup</h3>
<main style="margin: 5% 20% 5%">
    <form class="form-horizontal" method="POST">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="form-group">
            <label for="nameInputBox" class="col-sm-2 control-label">Name</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.CategoryName)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-info">Save</button>
            </div>
        </div>
    </form>
    @message

    @section Scripts{
        @Scripts.Render("~/bundles/jqueryval")
        @*@Scripts.Render("~/bundles/custom-validator")*@
        @*@Scripts.Render("~/Scripts/CategorySaveValidate.js")*@
    }

</main>

