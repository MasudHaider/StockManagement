@model StockManagementMvcWebApp.Models.View.SalesView
@{
    ViewBag.Title = "SalesView";
}

@section styles
{
    
<link href="~/Content/bootstrap-datepicker.css" rel="stylesheet" />
}

<h3 style="margin-left: 40%">SalesView</h3>
<main class="container">
    <form class="form-horizontal" id="salesViewForm" method="POST">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label for="fromDateTextbox" class="col-sm-2 control-label">From Date : </label>
            <div class="col-sm-10">
                @Html.TextBoxFor(c => c.FromDate, new {@class = "form-control"})
                @Html.ValidationMessageFor(c => c.FromDate)

            </div>
        </div>
        <div class="form-group">
            <label for="toDateTextbox" class="col-sm-2 control-label">To Date : </label>
            <div class="col-sm-10">

                @Html.TextBoxFor(c => c.ToDate, new {@class = "form-control"})
                @Html.ValidationMessageFor(c => c.ToDate)

            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="button" id="saleViewButton" class="btn btn-info">Search</button>
                <br/><br/>
                <p id="message"></p>
            </div>
        </div>

        <table id="salesViewTable" class="table table-hover table-responsive table-bordered table-striped">
            <thead>
            <tr>
                <th>SL</th>
                <th>Item Name</th>
                <th>Sale Quantity</th>
            </tr>
            </thead>
            <tbody id="TableBody"></tbody>

        </table>
    </form>

</main>

@section scripts
{
@Scripts.Render("~/bundles/jqueryval")
<script src="~/Scripts/bootstrap-datepicker.js"></script>
<script src="~/Scripts/SalesViewAjax.js"></script>
}
